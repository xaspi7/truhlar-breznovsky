                                <li class="flex items-center gap-2"><span class="w-1.5 h-1.5 bg-accent rounded-full"></span>Olejové a voskové úpravy</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- GALLERY SECTION (Alpine.js) -->
        <section id="realizace" class="py-24 bg-stone-50 border-t border-stone-900/5"
            x-data="{ 
                open: false, activeImage: '', activeIndex: 0, touchStartX: 0, touchEndX: 0,
                images: ['/images/06.jpg', '/images/07.jpg', '/images/04.jpg', '/images/09.jpg', '/images/10.jpg', '/images/11.jpg', '/images/12.jpg'],
                openGallery(index) { this.activeImage = this.images[index]; this.activeIndex = index; this.open = true; document.body.style.overflow = 'hidden'; },
                closeGallery() { this.open = false; document.body.style.overflow = 'auto'; },
                next() { this.activeIndex = (this.activeIndex + 1) % this.images.length; this.activeImage = this.images[this.activeIndex]; },
                prev() { this.activeIndex = (this.activeIndex - 1 + this.images.length) % this.images.length; this.activeImage = this.images[this.activeIndex]; }
            }"
            @keydown.escape.window="closeGallery()"
            @keydown.arrow-right.window="if(open) next()"
            @keydown.arrow-left.window="if(open) prev()"
        >
            <div class="container mx-auto px-6">
                <div class="text-center mb-16 max-w-2xl mx-auto">
                    <span class="text-accent uppercase tracking-[0.2em] text-xs font-bold mb-2 block">Realizace</span>
                    <h2 class="text-4xl font-serif text-stone-900 mb-6">Vybrané projekty</h2>
                    <p class="text-stone-900/70">Prohlédněte si detailní zpracování mých posledních prací.</p>
                </div>
                <!-- Masonry Grid -->
                <div class="columns-1 md:columns-2 lg:columns-3 gap-8 space-y-8">
                    <template x-for="(img, index) in images" :key="index">
                        <div @click="openGallery(index)" class="break-inside-avoid block group relative overflow-hidden rounded-sm shadow-sm hover:shadow-xl transition-all duration-300 cursor-zoom-in bg-stone-100">
                            <img :src="img" :alt="'Realizace ' + (index + 1)" class="w-full h-auto object-cover transform transition-transform duration-700 group-hover:scale-105" loading="lazy">
                            <div class="absolute inset-0 bg-stone-900/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                                <span class="text-white font-serif text-lg tracking-wider border-b border-accent pb-1 transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">Zvětšit foto</span>
                            </div>
                        </div>
                    </template>
                </div>
                <div class="text-center mt-12">
                    <a href="#kontakt" class="inline-block px-8 py-3 border border-stone-900 text-stone-900 uppercase tracking-widest text-sm hover:bg-stone-900 hover:text-white transition-colors rounded-full font-bold">Mám zájem o podobnou realizaci</a>
                </div>
            </div>

            <!-- Lightbox Modal -->
            <div x-show="open" x-transition x-cloak class="fixed inset-0 z-[60] flex items-center justify-center bg-black/95 backdrop-blur-sm"
                 @touchstart="touchStartX = $event.changedTouches[0].screenX"
                 @touchend="touchEndX = $event.changedTouches[0].screenX; if(touchStartX - touchEndX > 50) next(); if(touchEndX - touchStartX > 50) prev();">
                <button @click.stop="closeGallery()" class="absolute top-6 right-6 text-white hover:text-accent z-50 p-2"><svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M6 18L18 6M6 6l12 12"></path></svg></button>
                <button @click.stop="prev()" class="absolute left-4 text-white hover:text-accent p-4 z-50 hidden md:block"><svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M15 19l-7-7 7-7"></path></svg></button>
                <div class="relative max-h-[90vh] max-w-[90vw]" @click.outside="closeGallery()">
                    <img :src="activeImage" class="max-h-[85vh] md:max-h-[90vh] max-w-[95vw] md:max-w-[90vw] object-contain rounded-sm shadow-2xl border border-white/10" alt="Detail realizace">
                </div>
                <button @click.stop="next()" class="absolute right-4 text-white hover:text-accent p-4 z-50 hidden md:block"><svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M9 5l7 7-7 7"></path></svg></button>
                <div class="md:hidden absolute bottom-8 left-0 w-full flex justify-center gap-12 z-50">
                    <button @click.stop="prev()" class="text-white p-2"><svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M15 19l-7-7 7-7"></path></svg></button>
                    <button @click.stop="next()" class="text-white p-2"><svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M9 5l7 7-7 7"></path></svg></button>
                </div>
            </div>
        </section>

        <!-- CONTACT SECTION -->
        <section id="kontakt" class="py-24 bg-stone-900 text-stone-50">
            <div class="container mx-auto px-6">
                <div class="grid lg:grid-cols-2 gap-16">
                    <div>
                        <span class="text-accent uppercase tracking-[0.2em] text-xs font-bold mb-6 block">Kontakt</span>
                        <h2 class="text-4xl md:text-5xl font-serif mb-8 text-white">Pojďme tvořit.</h2>
                        <p class="text-stone-400 mb-12 text-lg font-light max-w-md">Máte představu? Odpovím vám osobně do 48 hodin.</p>
                        <div class="space-y-8 hidden md:block">
                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 rounded-full border border-white/10 flex items-center justify-center text-accent shrink-0"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg></div>
                                <div><h3 class="text-lg font-serif mb-1 text-white">Telefon</h3><a href="tel:+420737730514" class="text-stone-400 hover:text-accent font-mono">+420 737 730 514</a></div>
                            </div>
                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 rounded-full border border-white/10 flex items-center justify-center text-accent shrink-0"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg></div>
                                <div><h3 class="text-lg font-serif mb-1 text-white">Email</h3><a href="mailto:Joe.69@seznam.cz" class="text-stone-400 hover:text-accent">Joe.69@seznam.cz</a></div>
                            </div>
                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 rounded-full border border-white/10 flex items-center justify-center text-accent shrink-0"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path></svg></div>
                                <div><h3 class="text-lg font-serif mb-1 text-white">Sídlo</h3><address class="text-stone-400 not-italic">Pavlovice 61, 258 01 Vlašim</address></div>
                            </div>
                        </div>
                        <div class="grid grid-cols-1 gap-4 mt-8 md:hidden">
                            <a href="tel:+420737730514" class="flex items-center gap-4 p-4 bg-white rounded-xl text-stone-900 font-bold active:bg-stone-50">Zavolat +420 737 730 514</a>
                            <a href="https://wa.me/420737730514" class="flex items-center gap-4 p-4 bg-green-500 rounded-xl text-white font-bold active:bg-green-600">Napsat na WhatsApp</a>
                        </div>
                    </div>
                    <div class="w-full bg-stone-800 p-8 rounded-lg"
                         x-data="{
                             loading: false,
                             success: false,
                             error: false,
                             async submitForm(e) {
                                 this.loading = true;
                                 this.error = false;
                                 
                                 const formData = new FormData(e.target);
                                 
                                 try {
                                     // Odeslání na FormSubmit.co
                                     const response = await fetch('https://formsubmit.co/ajax/Joe.69@seznam.cz', {
                                         method: 'POST',
                                         body: formData
                                     });
                                     
                                     const result = await response.json();
                                     
                                     if (result.success === 'true' || response.ok) {
                                         this.success = true;
                                         e.target.reset();
                                     } else {
                                         throw new Error('Chyba odeslání');
                                     }
                                 } catch (err) {
                                     console.error(err);
                                     this.error = true;
                                 } finally {
                                     this.loading = false;
                                 }
                             }
                         }"
                    >
