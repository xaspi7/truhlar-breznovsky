            background-color: #fafaf9; /* stone-50 */
            color: #1c1917; /* stone-900 */
        }
        .bg-bg-body { background-color: #fafaf9; }
        .text-text-main { color: #1c1917; }
        .text-accent { color: #B45309; }
        .bg-accent { background-color: #B45309; }
        .border-accent { border-color: #B45309; }
        
        [x-cloak] { display: none !important; }

        /* Custom Scrollbar */
        ::-webkit-scrollbar { width: 10px; }
        ::-webkit-scrollbar-track { background: #fafaf9; }
        ::-webkit-scrollbar-thumb { background: rgba(180, 83, 9, 0.6); border-radius: 9999px; }
        ::-webkit-scrollbar-thumb:hover { background: #B45309; }

        @media (max-width: 768px) {
            body { padding-bottom: 5rem; }
